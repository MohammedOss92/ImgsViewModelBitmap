<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewpager"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgFavepager"
        android:layout_width="50"
        android:layout_height="50"
        android:src="@drawable/baseline_favorite_true"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/imageViewpager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/save_imgpager" />

    <Space
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFavepager"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/save_imgpager"
        android:layout_width="50"
        android:layout_height="50"
        android:src="@drawable/ic_save"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="50"
        android:layout_height="50"
        android:layout_marginEnd="100dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/save_imgpager"
        app:layout_constraintTop_toBottomOf="@+id/space"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
